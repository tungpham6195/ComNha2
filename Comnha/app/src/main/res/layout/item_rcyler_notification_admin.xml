<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_rcyler_cardV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardv_loca_item_marginBot"
        android:layout_marginEnd="@dimen/cardv_loca_item_margin"
        android:layout_marginStart="@dimen/cardv_loca_item_margin"
        android:layout_marginTop="@dimen/cardv_loca_item_marginTop"
        android:clickable="true"

        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="@dimen/cardv_cornerRadius"
        card_view:cardElevation="@dimen/cardv_elevation">

        <LinearLayout
            android:padding="20dp"
            android:id="@+id/ll_item_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt_Ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: "/>
            <TextView
                android:id="@+id/txt_Gio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giờ: "/>

            <TextView
                android:id="@+id/txt_Noidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung thông báo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn__Option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:background="?attr/selectableItemBackground"
                android:padding="5dp"
                android:src="@drawable/ic_more_vert_grey_700_24dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>